<div class="author">
    <h1 class="author__heading">Hi, I am Hoang-Dev</h1>
    <p class="author__body">Web blog about technical</p>
</div>
<img
    src="img/banner.png"
    alt="banner technology"
    class="banner-image"
    width="981"
    height="500"
/>

<section class="articles">
    <h2 class="article__heading">Lastest Posts</h2>
    <ul class="article-ul">
        <% data.forEach(post => { %>

        <li>
            <a href="/post/<%= post._id %>">
                <span><%= post.title %> </span>
                <span class="article-list__date"
                    ><%= post.createdAt.toDateString() %></span
                >
            </a>
        </li>
        <% }) %>
    </ul>
    <% if(nextPage !== null) { %>
    <a href="/?page=<%= nextPage %>" class="pagination"
        >&lt; View Older Posts</a
    >
    <% }%>
</section>
